/* client/pages/detailApt/detailApt.wxss */
.weui-form-preview{
    margin-bottom: 25px;
}
.titleBox{
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content: space-between;
  flex-wrap: nowrap;
}
.shareBox{
  margin-right: 15px;
}
.buttonShare {
  width: 120px;
	font-size: 15px;
  align-content: left;
  background: #03A9F4;
	color: #fff;
  border-radius: 0px;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}
.buttonShare::after{ 
  border: none; 
	border-right: 1px solid #dadada;
}  
.buttonMore {
  width: 42px;
	font-size: 15px;
  align-content: left;
  background: #03A9F4;
	color: #fff;
  border-radius: 0px;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}
.buttonMore::after{ border: none; }  
.sheet{
  background-color: #F8F8F8;
  font-size: 16px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  padding-left: 15px;
  padding-right: 15px;
}
.sheet-preview {
  position: relative;
}
.sheet-preview:before {
  top: 0;
  border-top: 1rpx solid #d9d9d9
}

.sheet-preview:after,.sheet-preview:before {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  color: #d9d9d9
}
.sheet-preview__bd {
  padding: 10px 15px;
  text-align: right;
  background-color: #fff;
  color: #999;
  line-height: 2
}

.buttonBox{
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  padding-left: 15px;
  padding-right: 15px;
  margin-bottom: 25px; 
}
.buttonDeny{
  flex-grow: 1;
  height: 37px;
  border-radius: 0px;
  border-bottom-right-radius: 10px;
  border-bottom-left-radius: 10px;
  background: #a7afb9;
	color: #fff;
	text-align: center;
	font-size: 15px;
}
.buttonDeny::after{ border: none; }  
.buttonJoin{
  flex-grow: 2;
  height: 37px;
  border-radius: 0px;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  background: #79899b;
	color: #fff;
	text-align: center;
	font-size: 15px;
}
.buttonJoin::after{ border: none; }  
.box{
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.item {
  height: 50px;
  width: 50px;
  margin-left: 5px;
  border-radius: 50%;
}

/*下拉菜单相关*/ 
.select_box {
    background-color: #a7afb9;
    padding: 0 10rpx;
    width: 152px;
    position: absolute;
    top: 70px;
    border-radius: 5px;
    z-index: 1;
    overflow: hidden;
    animation: myfirst 0.5s;
}
@keyframes myfirst {
    from {
        height: 0rpx;
    }
 
    to {
        height: 162rpx;/*243rpx;*/
    }
}
.select_one {
    text-align: center;
    color: #fff;
    height: 80rpx;
    line-height: 80rpx;
    border-top: 1px solid #ccc;
}

/*二维码*/ 
.imagePathBox{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}
.WXCodeImage{
  width: 280px;
  height: 280px;
  position: fixed;
  top: 20%;
  left: 50%;
  margin-left: -140px;
  z-index: 10;
}
.buttonSave{
  display: block;
  width: 280px;
  height: 80rpx;
  padding: 0;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  bottom: 50%;
  margin-bottom: -180px;
  left: 50%;
  margin-left: -140px; 
  background: #79899b;
  color: #fff;
  font-size: 32rpx;
  border-radius: 5px;
}
button[class="buttonSave"]::after{
  border: 0;
}

.buttonLogIn{
  display: block;
  width: 90%;
  height: 80rpx;
  padding: 0;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  bottom: 50%;
  margin-bottom: -40px;
  left: 50%;
  margin-left: -45%; 
  background: #79899b;
  color: #fff;
  font-size: 32rpx;
  border-radius: 5px;
}