/* client/pages/detailApt/detailApt.wxss */
.weui-form-preview{
    margin-bottom: 25px;
}
.titleBox{
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: nowrap;
}
.buttonShare {
  flex-grow: 1;
  width: 120px;
	font-size: 15px;
  align-content: left;
  background: #03A9F4;
	color: #fff;
}

.sheet{
  background-color: #F8F8F8;
  font-size: 16px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  padding-left: 15px;
  padding-right: 15px;
}
.sheet-preview {
  position: relative;
}
.sheet-preview:before {
  top: 0;
  border-top: 1rpx solid #d9d9d9
}

.sheet-preview:after,.sheet-preview:before {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  color: #d9d9d9
}
.sheet-preview__bd {
  padding: 10px 15px;
  text-align: right;
  background-color: #fff;
  color: #999;
  line-height: 2
}

.buttonBox{
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  padding-left: 15px;
  padding-right: 15px;
  margin-bottom: 25px; 
}
.buttonLogIn{
  flex-grow: 1;
  height: 37px;
  border-radius: 0px;
  border-bottom-right-radius: 10px;
  border-bottom-left-radius: 10px;
  background: #79899b;
	color: #fff;
	text-align: center;
	font-size: 15px;
}
.buttonLogIn::after{ border: none; }  
.buttonDeny{
  flex-grow: 1;
  height: 37px;
  border-radius: 0px;
  border-bottom-right-radius: 10px;
  border-bottom-left-radius: 10px;
  background: #a7afb9;
	color: #fff;
	text-align: center;
	font-size: 15px;
}
.buttonDeny::after{ border: none; }  
.buttonJoin{
  flex-grow: 2;
  height: 37px;
  border-radius: 0px;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  background: #79899b;
	color: #fff;
	text-align: center;
	font-size: 15px;
}
.buttonJoin::after{ border: none; }  
.box{
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.item {
  height: 50px;
  width: 50px;
  margin-left: 5px;
  border-radius: 50%;
}
